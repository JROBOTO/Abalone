<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="GridSpaceImageViewStyle">
        <!-- Default style for spaces on the grid whether occupied by a counter or not -->
        <item name="android:layout_width">@dimen/gridSpaceDiameter</item>
        <item name="android:layout_height">@dimen/gridSpaceDiameter</item>
        <item name="android:clickable">true</item>
        <item name="android:state_drag_can_accept">true</item>
        <item name="android:contentDescription">@string/gridSpaceDescription</item>
    </style>

    <style name="MainMenuOptionsStyle">
        <!-- Default style for the buttons on the main menu -->
        <item name="android:layout_height">@dimen/mainMenuButtonHeight</item>
        <item name="android:layout_width">@dimen/mainMenuButtonWidth</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/mainMenuItemPadding</item>
        <item name="android:paddingBottom">@dimen/mainMenuItemPadding</item>
        <item name="android:layout_marginBottom">@dimen/mainMenuButtonMargin</item>
        <item name="android:layout_marginTop">@dimen/mainMenuButtonMargin</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ScoreBubbleStyle">
        <!-- Style for the boxes presenting the current score to the user in the game screen -->
        <item name="android:paddingBottom">@dimen/scoreTextBubblePadding</item>
        <item name="android:paddingTop">@dimen/scoreTextBubblePadding</item>
        <item name="android:paddingLeft">@dimen/scoreTextBubblePadding</item>
        <item name="android:paddingRight">@dimen/scoreTextBubblePadding</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
